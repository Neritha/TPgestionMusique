{% extends 'base.html.twig' %}

{% block title %}Fiche de l'album{% endblock %}

{% block body %}
    <h1 clas="pt-2 text-center">Fiche de l'album</h1>
    <hr>
    <div class="row card m-1">
        <h3 class="card-header"> {{leAlbum.nom}}</h3>
        <div class="row">
            <div class="col-3 d-flex align-items-center mx-auto">
                <img class="avatar mx-auto d-block" style="height: auto; width: 100px; display: bloc;" src="{{leAlbum.image}}" alt="">
            </div>

            <div class="col">
                <div class="card-body">

                    <div class="row">
                        <div class="col"> 
                            <h5 class="card-title">
                                <a href=" {{path('ficheArtiste', {'id':leAlbum.artiste.id})}} " class="badge badge-success"> {{leAlbum.artiste.nom}} </a>
                            </h5> 
                        </div>
                        <div class="col"align="right"> 
                            <h5 class="card-title">
                                <a href="{{path('ficheLabel', {'id': leAlbum.label.id})}}" class="badge badge-success" > {{leAlbum.label.nom}} </a>
                            </h5> 
                        </div>
                    </div>

                    <p class="card-text"> {{leAlbum.date}} </p>
                </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            {% for leStyle in leAlbum.styles %}
                                <span class="badge" style="bacground-color:{{leStyle.couleur}};"> {{leStyle.nom}} </span>
                            {% endfor %}
                        </li>

                        {% set nb = leAlbum.morceaux|length %}

                        <li class="list-group-item">
                            {{nb}} {% if nb>1 %} morceaux {% else %} morceau {% endif %}
                        </li>                                
                    </ul>
                </div>
            </div>
        </div>
    

    <table class="table table-hover mx-auto">
        <thead>
            <tr>
                <th scope="col-3">Piste</th>
                <th scope="col-5">Titre</th>
                <th scope="col-1">Dur√©e</th>
                <th scope="col-3">Note</th>
            </tr>
        </thead>
        <tbody>
            {% for leMorceau in leAlbum.morceaux %}
                <tr class="table-light">
                    <td>{{leMorceau.piste}}</td>
                    <td>{{leMorceau.titre}}</td>
                    <td>{{leMorceau.duree}}</td>
                    <td>a</td>
                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
